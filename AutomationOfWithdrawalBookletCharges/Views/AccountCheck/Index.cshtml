@model AutomationOfWithdrawalBookletCharges.ViewModel.CustomerViewModel
@{
    ViewBag.Title = "Profile";
}
    <div class="row row-content-section">
        <div class="col-md-12">
            <div class="well form-horizontal col-md-4 col-md-offset-4">
                <fieldset>
                    @using (Html.BeginForm("Display", "AccountCheck", FormMethod.Post, new { id = "Retrieve", role = "form" }))
                    {
                        <div class="col-md-12 form-horizontal">
                            @Html.AntiForgeryToken()
                            <h4 class="text-center ubn-color">Retrieve Account Information</h4>
                            <div class="form-group">
                                @Html.DisplayFor(m => m.AccountNumber)
                                @Html.TextBoxFor(m => m.AccountNumber, new { @class = "form-control", @placeholder = "Enter customers account number.", @required = "required" })
                                @Html.ValidationMessageFor(m => m.AccountNumber)
                            </div>
                            <div class="form-group">
                                <input type="submit" value="Retrieve" class="btn btn-md btn-danger col-md-offset-4 col-md-4" onclick="Disable(this)"  />
                            </div>
                            @if (ViewBag.NoAccountError != null)
                            {
                                <div class="alert alert-danger">
                                    <p><b>@ViewBag.NoAccountError</b> </p>
                                </div>
                            }

                        </div>
                    }
                </fieldset>
            </div>
        </div>
    </div>

@section Script{
<script>

    function Disable(btn) {
            setTimeout(function () {
                $(btn).removeClass('btn-danger');
                $(btn).addClass('ubn-color-bg');
                $(btn).val("Retrieving....");
            }, 100);
       
    }
</script>
}



    



