@model IEnumerable<AutomationOfWithdrawalBookletCharges.ViewModel.UserProfileViewModel>

@{
    ViewBag.Title = "Add User";
}

<div class="row row-content-section">
    <div class="col-md-12">
        <div class="well form-horizontal col-md-4 col-md-offset-4">
@foreach (var item in Model)
{
            <fieldset>

                <div class="form-group">
                    <div class="col-md-4">
                        <h4><strong>
                            Staff Name:</strong>
                        </h4>
                    </div>
                            <div class="col-md-8">
                                <h4>@Html.DisplayFor(modelItem => item.FullName)</h4>
                            </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-4">
                            <h4><strong>
                            Staff ID:</strong>
                        </h4>
                        </div>
                        <div class="col-md-8">
                            <h4>@Html.DisplayFor(modelItem => item.EmployeeNumber)</h4>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-4">
                            <h4>
                                <strong>Title:</strong>
                            </h4>
                        </div>
                        <div class="col-md-8">
                            <h4>@Html.DisplayFor(modelItem => item.Title)</h4>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-4"><h4><strong>Role: </strong></h4></div>

                        <div class="col-md-8"><h4>@Html.DisplayFor(modelItem => item.Roles)</h4></div>
                    </div>

                    @using (Html.BeginForm("Edit", "AdminDetails", FormMethod.Post, new { id = "EditUser", role = "form" }))
                    {
                        <div class="col-md-12 form-horizontal">
                            @Html.AntiForgeryToken()
                            <div class="form-group">
                                <input type="hidden" name="EmployeeNumber" value="@Html.DisplayFor(modelItem =>item.EmployeeNumber)" />
                                <input type="hidden" name="UserName" value="@Html.DisplayFor(modelItem => item.UserName)" />
                                <label class="control-label">Select Role</label>
                                <select name="RolesID" id="RolesID">
                                    <option value="1">(Admin)-Administrator</option>
                                    <option value="2">(Maker)-SALES &amp; SERVICE ASSOCIATE</option>
                                    <option value="3">(Checker)-HEAD SALES &amp; SERVICE ASSOCIATE</option>
                                </select>
                            </div>

                            <div class="form-group">
                                <a class="btn btn-md ubn-color-bg white-bar col-md-4" href="@Url.Action("Index","AdminDetails")">Back</a>
                                <input type="submit" value="Update" class="btn btn-md btn-danger col-md-offset-4 col-md-4" />
                            </div>
                            @if (ViewBag.EditUserErrorMessage != null)
                            {
                                <div class="alert alert-danger">
                                    <p><b>Creation Failed!</b> @ViewBag.EditUserErrorMessage</p>
                                </div>
                            }

                        </div>
                    }
</fieldset>
}
        </div>
        <div class="clearfix"></div>
    </div>
</div>
@section Script {
    <script>
        $(document).ready(function () {
            $("#RolesID").addClass("form-control");
            $("#RolesID").prepend("<option selected='selected'> Select Role</option");
            $("#RolesID").attr("required", true);
        })
    </script>
}
