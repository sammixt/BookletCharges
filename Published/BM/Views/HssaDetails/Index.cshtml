@model IEnumerable<AutomationOfWithdrawalBookletCharges.ViewModel.CustomerViewModel>
<div class="row row-content-section">
    <div class="col-md-12">
    <div class="well form-inline col-md-10 col-md-offset-1" >
        <fieldset>
            @using (Html.BeginForm("Search", "HssaDetails", FormMethod.Post, new { id = "sendform", role = "form", @class = "col-md-12" }))
            {
                <div class="form-group col-md-3">
                    <label class="control-label">Start Date</label>
                    <input type="text" name="SearchStartDate" class="form-control datepicker" required />
                </div>
                <div class="form-group col-md-3">
                    <label class="control-label">End Date</label>
                    <input type="text" name="SearchEndDate" class="form-control datepicker" required />
                </div>
                <div class="form-group col-md-3">
                    <label class="control-label">Status</label><br/>
                    <select name="Status" class="form-control" id="Status">
                        <option value="PENDING">PENDING</option>
                        <option value="APPROVED">APPROVED</option>
                        <option value="DECLINED">DECLINED</option>
                    </select>
                </div>
                <div class="form-group col-md-3">
                    <br />
                    <input type="submit" value="Search" class="btn btn-md ubn-color-bg white-bar" />
                </div>
                <div class="clearfix"></div>
            }
        </fieldset>
        </div>
        <div class=" form-inline col-md-10 col-md-offset-1">
            <h4 class="ubn-color">@ViewBag.DisplayMessage</h4>
            <table class="table table-bordered table-responsive ">
                <tr class="ubn-color-bg white-bar">
                    <th>
                        @Html.DisplayNameFor(model => model.AccountName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.AccountNumber)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.RequestCreationDate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.RequestCreationTime)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.SsaName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Status)
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.AccountName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.AccountNumber)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.RequestCreationDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.RequestCreationTime)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.SsaName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Status)
                        </td>
                        <td>
                            @ShowDiffLink(item.Status, item.RequestId)                           
                        </td>
                    </tr>
                }

            </table>
</div>
        </div>
</div>

@helper ShowDiffLink(string status, string link)
{
    if(status == "APPROVED" || status == "DECLINED")
    {
        @Html.ActionLink("View", "DisplayState", "HssaDetails", new { id = link }, new { @class = "btn btn-sm ubn-color-bg white-bar" })
    }
    else
    {
      @Html.ActionLink("View", "Display", "HssaDetails", new { id = link }, new { @class = "btn btn-sm ubn-color-bg white-bar" })  
    }
}




<style>
    .body-content {
        padding-left: 1%;
        padding-right: 1%;
        margin-top: -3%;
        width: 100%;
    }
</style>

@section Script{
    <script type="text/javascript">
    $(function () { // will trigger when the document is ready
        $('.datepicker').datepicker(); //Initialise any date pickers
    });
</script>
    }
